        <record model="ir.ui.view" id="hr_housing_form">
            <field name="name">Hr Housing Form</field>
            <field name="model">hr.housing</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Approve" class="btn btn-primary" type="object" name="state_approve"
                                attrs="{'invisible': [('state','=', 'approved')]}" group="hr.group_hr_user"/>
                        <button string="Refuse" class="btn btn-primary" type="object" name="state_refuse"
                                attrs="{'invisible': [('state','=', 'refuse')]}" group="hr.group_hr_user"/>
                        <button string="Set Pending" class="btn btn-primary" type="object" name="state_pending"
                                attrs="{'invisible': [('state','=', 'pending')]}" group="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="housing_location"/>
                            <field name="housing_residential_type"/>
                            <field name="employee_id" invisible="1"/>
                            <field name="housing_ownership"
                                   attrs="{'required':[('housing_residential_type','in',('own','rel','ren','nre'))]}"/>
                            <field name="housing_utility_bill"
                                   attrs="{'required':[('housing_residential_type','in',('own','rel','ren'))]}"/>
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <!--                            <button name="update_default_attachments" type="object" string="Update Required Attachments"-->
                            <!--                                    class="btn btn-secondary"/>-->
                            <field name="attached_documents">
                                <tree editable="top">
                                    <field name="name"/>
                                    <field name="attachment_ids" widget="many2many_binary"/>
                                </tree>
                            </field>
                            <!--                            <field name="related_declaration_form" domain="[('related_employee', '=', employee_id)]"-->
                            <!--                                   attrs="{'required':[('housing_residential_type','in',('own','rel','nre'))],'invisible':[('housing_residential_type','=','ren')]}"/>-->
                            <!--                            <field name="related_lease_contract" domain="[('res_id', '=', 25), (-->
                            <!--                                            'res_model', '=', 'hr_employee')]"-->
                            <!--                                   attrs="{'required':[('housing_residential_type','=','ren')],'invisible':[('housing_residential_type','!=','ren')]}"/>-->
                            <field name="yearly_rent_value"
                                   attrs="{'invisible':[('housing_residential_type','!=','ren')]}"/>
                            <field name="wage" invisible="1"/>
                            <field name="tawtheeq_number"
                                   attrs="{'required':[('wage','>=',25000)],'invisible':[('housing_residential_type','!=','ren')]}"/>
                            <hr/>
                            <field name="refuse_reason"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

