<odoo>
    <data>
        <record id="hr.hr_employee_print_badge" model="ir.actions.report">
            <field name="groups_id" eval="[(4, ref('base.user_admin'))]"/>

        </record>

        <record id="resume_line_view_form_inherited" model="ir.ui.view">
            <field name="name">hr.resume.line.form.inherited</field>
            <field name="model">hr.resume.line</field>
            <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
            <field name="arch" type="xml">
                <group position="inside">
                    <field name="related_line_type" invisible="1"/>
                    <group attrs="{'invisible': [('related_line_type', '!=', 'edu')]}">
                        <field name="education_level"/>
                        <field name="institute_name"/>
                        <field name="major_subject"/>
                        <field name="educational_status"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                    <group attrs="{'invisible': [('related_line_type', '!=', 'exp')]}">
                        <field name="company_name"/>
                        <field name="type_business"/>
                        <field name="job_title"/>
                        <field name="work_city"/>
                        <field name="work_country"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>

                </group>
            </field>
        </record>

        <record id="custom_contacts_view_employee" model="ir.ui.view">
            <field name="name">custom.contacts.view.employee</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="//sheet" position="before">-->
                <sheet position="before">
                    <header>
                        <button string="Approve" class="btn btn-primary" type="object" name="state_approve"
                                attrs="{'invisible': [('state','=', 'approved')]}" group="hr.group_hr_user"/>
                        <button string="Reject" class="btn btn-primary" type="object" name="log_and_reject"
                                attrs="{'invisible': [('state','=', 'reject')]}" group="hr.group_hr_user"/>
                        <button string="Set Pending" class="btn btn-primary" type="object" name="state_pending"
                                attrs="{'invisible': [('state','=', 'pending')]}" group="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                </sheet>

                <field name="type" position="before">
                    <field name="reject_reason" class="text-danger"/>

                </field>
                <xpath expr="//field[@name='function']" position="before">
                    <field name="contact_relation_type_id"/>
                </xpath>
            </field>
        </record>


        <record id="view_employee_form_custom" model="ir.ui.view">
            <field name="name">hr.employee.form.custom</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <header position="inside">
                    <button string="Approve" class="btn btn-primary" type="object" name="state_approve"
                            attrs="{'invisible': [('state','=', 'approved')]}" groups="base.user_admin"/>
                    <button string="Reject" class="btn btn-primary" type="object" name="log_and_reject"
                            attrs="{'invisible': [('state','=', 'reject')]}" groups="base.user_admin"/>
                    <button string="Set Pending" class="btn btn-primary" type="object" name="state_pending"
                            attrs="{'invisible': [('state','=', 'pending')]}" groups="base.user_admin"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <xpath expr="//field[@name='department_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True}</attribute>
                </xpath>

                <field name="job_id" position="before">
                    <field name="contract_id" readonly="1" string="Running Contract"/>
                </field>
                <field name="name" position="replace">
                    <field name="name" class="oe_read_only"/>
                    <field name="firstname" class="oe_edit_only" placeholder="Firstname"/>
                    <field name="middlename" class="oe_edit_only" placeholder="Middlename"/>
                    <field name="lastname" class="oe_edit_only" placeholder="Lastname"/>
                    <br/>
                    <field name="arabic_name" placeholder="الاسم"/>
                </field>
                <field name="mobile_phone" position="before">
                    <field name="read_only_user_role" invisible="1"/>
                    <field name="invisible_user_role" invisible="1"/>
                    <field name="all_model_read_only" invisible="1"/>
                    <field name="reject_reason" class="text-danger"
                           attrs="{'readonly':[('read_only_user_role','=',True)]}"/>
                    <field name="strata_id" readonly="1"/>
                    <field name="system_id" readonly="1"/>
                    <field name="contract_employment_type"  attrs="{'readonly':[('read_only_user_role','=',True)]}"/>
                    <field name="id_generated" invisible="1"/>
                    <button string="Generate ID" class="btn " type="object" name="generate_id"
                            attrs="{'invisible': [('id_generated','=',True)]}" groups="base.user_admin"/>
                    <field name="title"/>
                    <field name="lang" options="{'no_create': True, 'no_open': True,'no_edit': True}"/>
                </field>
                <field name="phone" position="after">
                    <field name="country_id"/>
                    <field name="state_id"/>
                    <field name="city"/>
                    <field name="street"/>
                    <field name="po_box"/>
                </field>

                <field name="gender" position="after">
                    <field name="religion"/>
                    <field name="mothers_name"/>
                    <field name="arabic_mothers_name"/>
                </field>


                <xpath expr="//button[@name='%(hr.plan_wizard_action)d']" position="attributes">
                    <attribute name="groups">base.user_admin</attribute>
                </xpath>

                <page name="hr_settings" position="attributes">
                    <attribute name="groups">base.user_admin</attribute>
                </page>

                <xpath expr="//field[@name='tz']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='resource_calendar_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//group[@name='departure']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='work_email']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='work_location']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='work_phone']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='mobile_phone']" position="attributes">
                    <attribute name="attrs">{'readonly': [('read_only_user_role','=',True)]}</attribute>
                </xpath>

                <xpath expr="//button[@name='%(hr_contract.act_hr_employee_2_hr_contract)d']" position="attributes">
                    <attribute name="attrs">{'invisible': [('invisible_user_role','=',True)]}</attribute>
                    <attribute name="groups">hr.group_hr_user</attribute>
                </xpath>
                <xpath expr="//page[@name='personal_information']" position="attributes">
                    <attribute name="attrs">{'invisible': [('invisible_user_role','=',True)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group" position="attributes">
