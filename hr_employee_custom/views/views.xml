                            <!--                                    <field name="contact_relation_type_id"/>-->
                            <!--                                </sheet>-->
                            <!--                            </form>-->
                        </field>
                    </page>
                    <page name="notices" string="Warnings"  attrs="{'invisible':[('invisible_user_role','=',True)]}">
                        <field name="notice_ids" context="{'default_related_employee':id}"
                               attrs="{'readonly':[('read_only_user_role','=',True)],'invisible': [('invisible_user_role','=',True)]}"/>
                    </page>
                    <page name="housings" string="Housings"
